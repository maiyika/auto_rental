<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coder.rental.mapper.AutoBrandMapper">
    <resultMap id="AutoBrandVoResultMap" type="com.coder.rental.vo.AutoBrandVo">
        <id property="voId" column="id"/>
        <result property="makerName" column="makerName"/>
        <association property="autoBrand" javaType="com.coder.rental.entity.AutoBrand">
            <id property="id" column="id"/>
            <result property="brandName" column="brandName"/>
            <result property="mid" column="mid"/>
        </association>
    </resultMap>
    <select id="searchByPage" resultType="com.coder.rental.vo.AutoBrandVo"
            resultMap="AutoBrandVoResultMap">
        select m.name makerName, b.id id, b.brand_name brandName, b.mid mid
        from auto_brand b, auto_maker m
        where b.mid = m.id
        <if test="autoBrand.mid != null and autoBrand.mid != ''">
            and b.mid = #{autoBrand.mid}
        </if>
        <if test="autoBrand.brandName != null and autoBrand.brandName != ''">
            and b.brand_name like concat('%', #{autoBrand.brandName}, '%')
        </if>
        and b.deleted = 0
        order by m.order_letter
    </select>
</mapper>
